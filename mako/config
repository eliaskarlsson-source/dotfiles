# Mako notification daemon configuration
# Catppuccin Mocha theme with 3-second timeout

# Position and dimensions
anchor=top-right
width=350
height=100
margin=10
padding=15
border-size=2
border-radius=8

# Timeout settings
default-timeout=3000
ignore-timeout=0

# Catppuccin Mocha colors
background-color=#1e1e2e
text-color=#cdd6f4
border-color=#89b4fa
progress-color=#a6e3a1

# Typography
font=JetBrains Mono Nerd Font 14
markup=1
format=<b>%s</b>\n%b

# Behavior
sort=-time
layer=overlay
max-history=100
max-visible=5

# Icons
icons=1
max-icon-size=48
icon-path=/usr/share/icons/Papirus-Dark

# Grouping
group-by=app-name

# Actions
actions=1
on-button-left=dismiss
on-button-middle=none
on-button-right=dismiss-all
on-touch=dismiss

# Urgency-specific overrides
[urgency=low]
background-color=#313244
border-color=#6c7086
default-timeout=3000

[urgency=normal]
background-color=#1e1e2e
border-color=#89b4fa
default-timeout=3000

[urgency=critical]
background-color=#f38ba8
text-color=#11111b
border-color=#eba0ac
default-timeout=0

# App-specific rules
[app-name=Spotify]
border-color=#a6e3a1

[app-name=Discord]
border-color=#b4befe

[app-name=Firefox]
border-color=#fab387